<%= render "header_ber"%>
<div class="edit-wrapper">
 
    
    <%# タスクの概要 %>
  <div class="task-edit">
    <ul class="edit-list">
      <li>クエスト内容</li> 
      <li class="content">
        <%= @task.content %><%= @task.point_id%>
      </li>
      <% if @task.user_id == current_user.id %>
        <div class="task-destroy" id = "form">
          <%= link_to 'クエスト完了', task_path(@task.id), method: :delete %>
        </div>
      <% end %>
    </ul>
  </div>
</div>