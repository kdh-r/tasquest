 <%= render "second_header" %>

<div class="wrapper">
  <div class="left-main">
    <h1>クエスト一覧</h1>
     <% if user_signed_in? %>
         <%= @tasks.each do |task| %>
            <%= link_to edit_task_path(task.id) do %>
               <div class="task" >
                 <span class='task-btn'><%= task.content %></span>
               </div>
            <% end%>   
         <% end %>
     <% end %>  
  </div>

  <div class="right-main">
     <div class="main"> 
         <% if user_signed_in? %>
         <div class="player-name"><%= current_user.name %>
         <h2>level:</h2>
         <%= current_user.player_level %>
         <% end %>
         </div>
       
         <div class="point"><% if user_signed_in? %>
         <h2>total exp:</h2>
         <%= current_user.tasks.sum("point_id") %>
         <% end %>
         </div>
         <div class="exp-text">
         <h2>次のレベルまであと</h2>
         </div>
     <div> 
  </div>        
</div>
