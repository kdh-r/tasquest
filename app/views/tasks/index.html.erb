<div class="wrapper">
  <div class="side-ber">
     <div class="header-name">
         <% if user_signed_in? %>
         <%= link_to current_user.name, "#" %>
         <% else %>
         <%= link_to "---", "#" %>
         <% end %>
         <%= link_to "リストを作成", new_task_path, class: "nav-link listNew" %>
     </div>

     <div class="left-main">
       <h1>クエスト一覧</h1>
         <% if user_signed_in? %>
           <%= @tasks.each do |task| %>
           <%# <%= link_to edit_task_path(task.id) do %> %>
               <div class="task" data-id=<%= task.id %> data-finish=<%= task.finished_at %>>
                <span class='task-btn'><%= task.content %></span>
                <span class='task-point'><%= task.point_id %></span>
               </div>
            <%# <% end%>    %>
           <% end %>
         <% end %>
      </div>
  </div>

  <div class="right-ber">
     <div class="header-right">
       <div class="header_title">
        <%= link_to "+asquest", root_path, class: "title-link" %>
       </div>
     <div class="links">
        <% unless user_signed_in? %>
        <%= link_to "新規登録/ログイン",new_user_session_path %>
        <% end %>
        <%= link_to "ログアウト", destroy_user_session_path, class: "nav-link" %>
     </div>
  </div>
  
  <div class="right-main">
     <div class="main"> 
         <% if user_signed_in? %>
         <div class="player-name"><%= current_user.name %>
         <h2>level:</h2>
         <%= current_user.player_level %>
         <% end %>
         </div>
       
         <div class="point"><% if user_signed_in? %>
         <h2>total exp:</h2>
         <%= current_user.tasks.sum("point_id") %>
         <% end %>
         </div>
     <div> 
  </div>
</div>
  
  
  
 